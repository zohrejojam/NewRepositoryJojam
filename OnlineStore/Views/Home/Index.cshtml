
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        Index
        <br />
        <button id="btnAdd" class="btn btn-success">Add New Material</button>

        <div id="view">
            Please Wait ...
        </div>

        <select id="comboMaterial">کالا</select>
    </div>
</body>
</html>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script type="text/javascript">
        //$(function () {
        //    $("#view").load("/Home/ListMaterial");
        //});

        $("#btnAdd").click(function () {
            $("#view").load("/Home/AddMaterial");
        });

        $(document).ready(function () {
            $.ajax({
                url: "/api/Materials/",
                type: "Get",
                dataType: "JSON",
                data: {},
                success: function (response) {
                    $("#comboMaterial").html("");
                    debugger;
                    $.each(response, function (index, value) {
                        $("#comboMaterial").append(
                            $('<option></option>').val(value.MaterialCode).html(value.MaterialTitle));
                    });
                }
            });
        });
    </script>
    